<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageview_character"
        android:layout_width="@dimen/image_character_detail"
        android:layout_height="@dimen/image_character_detail"
        android:layout_marginTop="@dimen/vertical_margin_default"
        tools:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textview_title_character_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_default"
        android:layout_marginTop="@dimen/vertical_margin_default"
        android:layout_marginEnd="@dimen/horizontal_margin_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_character"
        android:fontFamily="sans-serif"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/title_character_description"
        />

    <TextView
        android:id="@+id/textview_character_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/horizontal_margin_default"
        android:layout_marginTop="@dimen/vertical_margin_default"
        android:layout_marginEnd="@dimen/horizontal_margin_default"
        android:fontFamily="sans-serif"
        tools:text="@string/title_name_character"
        android:breakStrategy="simple"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_title_character_description"
        tools:targetApi="m" />

</androidx.constraintlayout.widget.ConstraintLayout>